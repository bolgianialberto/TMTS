<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_marginBottom="2dp"
    android:gravity="center_vertical">

    <!-- LinearLayout that groups the ImageView and serie details -->
    <LinearLayout
        android:id="@+id/ll_serie_info"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="95"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/iv_home_serie_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/movie"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_home_serie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="placeholder title"/>

            <TextView
                android:id="@+id/tv_home_serie_episode_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:text="placeholder episode number"/>

            <TextView
                android:id="@+id/tv_home_serie_episode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:text="placeholder episode title"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_home_serie_check"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/check"/>
</LinearLayout>
