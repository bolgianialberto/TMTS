<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_message_notification_app_logo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/chat"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_message_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_message_notification_app_logo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_message_notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="14sp"
            android:layout_below="@id/tv_message_notification_title"
            android:layout_toRightOf="@id/iv_message_notification_app_logo"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>

</RelativeLayout>